apiVersion: apps/v1
kind: Deployment
metadata:
  name: myapp
  namespace: $namespace
spec:
  replicas: 2
  selector:
    matchLabels:
      app: myapp
  template:
    metadata:
      labels:
        app: myapp
    spec:
      imagePullSecrets:
      - name: myapp
      containers:
      - name: myapp
        image: cr.yandex/$yandex_container_registry_id/myapp:__VERSION__
        resources:
          limits:
            memory: "128Mi"
            cpu: "200m"
        ports:
        - containerPort: 80
